<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/MiddleTButton"
        android:layout_width="122dp"
        android:layout_height="73dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:text="Spanish"
        app:layout_constraintBottom_toTopOf="@+id/MiddleBButton"
        app:layout_constraintEnd_toStartOf="@+id/TopRButton"
        app:layout_constraintHorizontal_bias="0.583"
        app:layout_constraintStart_toEndOf="@+id/TopLButton"
        app:layout_constraintTop_toTopOf="@+id/TopLButton"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/helloText"
        android:layout_width="231dp"
        android:layout_height="168dp"
        android:layout_marginTop="93dp"
        android:width="70dp"
        android:fontFamily="sans-serif-black"
        android:text="Hello World Translator"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#C82C2C"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/TopLButton"
        android:layout_width="122dp"
        android:layout_height="73dp"
        android:layout_marginEnd="276dp"
        android:layout_marginBottom="428dp"
        android:text="Russian"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/BottomRButton"
        android:layout_width="122dp"
        android:layout_height="73dp"
        android:text="German"
        app:layout_constraintBottom_toBottomOf="@+id/MiddleBButton"
        app:layout_constraintEnd_toEndOf="@+id/TopRButton"
        app:layout_constraintTop_toTopOf="@+id/MiddleBButton" />

    <Button
        android:id="@+id/MiddleBButton"
        android:layout_width="122dp"
        android:layout_height="73dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Japanese"
        app:layout_constraintBottom_toBottomOf="@+id/BottomLButton"
        app:layout_constraintEnd_toStartOf="@+id/BottomRButton"
        app:layout_constraintHorizontal_bias="0.583"
        app:layout_constraintStart_toEndOf="@+id/BottomLButton"
        app:layout_constraintTop_toTopOf="@+id/BottomLButton"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/BottomLButton"
        android:layout_width="122dp"
        android:layout_height="73dp"
        android:layout_marginTop="28dp"
        android:text="Dutch"
        app:layout_constraintEnd_toEndOf="@+id/TopLButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/TopLButton"
        app:layout_constraintTop_toBottomOf="@+id/TopLButton" />

    <Button
        android:id="@+id/TopRButton"
        android:layout_width="122dp"
        android:layout_height="73dp"
        android:layout_marginEnd="12dp"
        android:text="French"
        app:layout_constraintBottom_toBottomOf="@+id/MiddleTButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/MiddleTButton"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>