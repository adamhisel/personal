<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="10dp">

    <!-- Wrapper layout -->
    <LinearLayout
        android:id="@+id/wrapperLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/playerNameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>

        <!-- Layout for assists -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Assists"
            android:textSize="15dp"/>
        <LinearLayout
            android:id="@+id/assistsLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/reboundsLayout"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/minusAssist"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:backgroundTint="#000000"
                android:text="-"
                android:textColor="#FFFFFF"
                android:layout_marginRight="4dp" />

            <TextView
                android:id="@+id/assistsView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:layout_marginRight="4dp" />

            <Button
                android:id="@+id/plusAssist"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:backgroundTint="#000000"
                android:text="+"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Layout for rebounds -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rebounds"
            android:textSize="15dp"/>
        <LinearLayout
            android:id="@+id/reboundsLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/minusRebound"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:backgroundTint="#000000"
                android:text="-"
                android:textColor="#FFFFFF"
                android:layout_marginRight="4dp" />

            <TextView
                android:id="@+id/reboundsView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:layout_marginRight="4dp" />

            <Button
                android:id="@+id/plusRebound"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:backgroundTint="#000000"
                android:text="+"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Layout for blocks -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blocks"
            android:textSize="15dp"/>
        <LinearLayout
            android:id="@+id/blocksLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/reboundsLayout"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/minusBlock"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:backgroundTint="#000000"
                android:text="-"
                android:textColor="#FFFFFF"
                android:layout_marginRight="4dp" />

            <TextView
                android:id="@+id/blocksView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:layout_marginRight="4dp" />

            <Button
                android:id="@+id/plusBlock"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:backgroundTint="#000000"
                android:text="+"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Layout for steals -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Steals"
            android:textSize="15dp"/>
        <LinearLayout
            android:id="@+id/stealsLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/blocksLayout"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/minusSteal"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:backgroundTint="#000000"
                android:text="-"
                android:textColor="#FFFFFF"
                android:layout_marginRight="4dp" />

            <TextView
                android:id="@+id/stealsView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:layout_marginRight="4dp" />

            <Button
                android:id="@+id/plusSteal"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:backgroundTint="#000000"
                android:text="+"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <Button
            android:id="@+id/btnDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/stealsLayout"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#000000"
            android:text="Done"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</RelativeLayout>